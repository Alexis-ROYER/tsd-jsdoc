{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src/typings/**/*.d.ts",
        "src/**/*.ts"
    ]
}
